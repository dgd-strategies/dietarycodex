# Environment variables for Dietary Index Web Calculator

# Base URL for API endpoints
API_BASE_URL=http://localhost:8000

# Port for static frontend server (if overridden)
FRONTEND_PORT=8000

# Enable debug mode for backend (true/false)
DEBUG=true

# Uvicorn settings for development
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000

# Path to temporary directory for CSV outputs
TMP_DIR=/tmp

# (Optional) API version to include in output
API_VERSION=0.1.0
